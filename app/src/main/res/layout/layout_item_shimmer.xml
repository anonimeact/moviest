    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="3dp"
        android:layout_weight="1"
        android:background="@color/gray_shimmer" />
</androidx.appcompat.widget.LinearLayoutCompat>